@model Assignment6.Models.TrackBaseViewModel

@{
    ViewBag.Title = "Track Detail";
    var userAccount = new Assignment6.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Track Detail</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
            <hr />
        </dd>

        <dt>
            Sample clip
        </dt>

        <dd>
            <audio src="/clip/@Model.Id" controls="controls"></audio>
            <hr />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Composers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composers)
            <hr />
        </dd>

    </dl>
</div>
<p>
    @if (userAccount.HasRoleClaim("Clerk"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) <span>|</span>
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) <span>|</span>
    }
    @Html.ActionLink("Back to List", "Index")
</p>
